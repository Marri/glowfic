- content_for :breadcrumbs do
  = link_to "Continuities", continuities_path
  &raquo;
  = link_to @post.continuity.name, continuity_path(@post.continuity)
  - if @post.section
    &raquo;
    = link_to @post.section.name, subcontinuity_path(@post.section)
  &raquo;
  = link_to @post.subject, post_path(@post)
  &raquo;
  %b Edit

.content-header Edit post
= render 'write', post: @post
