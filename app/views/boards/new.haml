= form_for @board, url: boards_path, method: :post do |f|
  %table.form-table
    %tr
      %th.centered{colspan: 2} Create Continuity
    %tr
      %th.sub Name
      %td.even= f.text_field :name, placeholder: "Continuity Name", class: 'text'
    %tr
      %th.sub Coauthor
      %td.odd= f.select :coauthor_id, options_from_collection_for_select(@users, :id, :username), include_blank: '— Open to Anyone —'
    %tr
      %th.centered.subber{colspan: 2}= submit_tag "Create Continuity", class: 'button'
