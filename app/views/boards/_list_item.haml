%tr
  %td.padding-10.board-title= link_to board.name, board_path(board)
  %td.padding-10.board-authors
    - if board.open_to_anyone?
      Anyone
    - else
      = safe_join(board.writers.reject(&:deleted?).sort_by{ |author| author.username.downcase }.map { |u| user_link(u) }, ', ')
  %td.padding-10.board-time= pretty_time(board.posts.ordered.first.try(:tagged_at))
