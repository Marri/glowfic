- content_for :breadcrumbs do
  = link_to "Continuities", boards_path
  &raquo;
  = link_to @board.name, board_path(@board)
  &raquo;
  %b Edit

= form_for @board, url: board_path(@board), method: :put do |f|
  %table.form-table
    %tr
      %th.centered{colspan: 2} Edit Continuity
    = render partial: 'editor', locals: {f: f}

%br
%br
- reset_cycle
%table#reorder-sections-table
  %thead
    %tr
      %th.post-header
        Organize Continuity Sections
        = link_to new_board_section_path params: {board_id: @board.id} do
          .link-box.green + New Section
        #loading.float-right.hidden
          = image_tag '/images/loading.gif', title: 'Loading...', class: 'vmid', alt: '...', style: 'width: 16px; height: 16px;'
        #saveconf.float-right.hidden
          = image_tag '/images/accept.png', title: 'Saved', class: 'vmid', alt: ''
          Saved
  %tbody
    - @board_sections.each do |section|
      %tr{class: 'section-ordered', data: {id: section.id, type: section.class.to_s, order: section.section_order}}
        %td.padding-5{class: cycle('even', 'odd')}
          = link_to 'Section: ' + section.name, board_section_path(section)
          .float-right
            = image_tag "/images/arrow_up.png", class: "section-up disabled-arrow"
            = image_tag "/images/arrow_down.png", class: "section-down disabled-arrow"
            = link_to edit_board_section_path(section) do
              = image_tag "/images/pencil.png"
            = link_to board_section_path(section), method: :delete, data: { confirm: 'Are you sure you want to delete this board section?' } do
              = image_tag "/images/cross.png"
    - if @board_sections.empty?
      %tr
        %td.centered.padding-10{ class: cycle('even','odd'), colspan: 6 } — No items yet —

- if (!@board.open_to_anyone? || @board_sections.present?) && @unsectioned_posts.present?
  %br
  - reset_cycle
  %table#reorder-posts-table
    %thead
      %tr
        %th.post-header
          Organize Unsectioned Posts
          #loading.float-right.hidden
            = image_tag '/images/loading.gif', title: 'Loading...', class: 'vmid', alt: '...', style: 'width: 16px; height: 16px;'
          #saveconf.float-right.hidden
            = image_tag '/images/accept.png', title: 'Saved', class: 'vmid', alt: ''
            Saved
    %tbody
      - @unsectioned_posts.each do |post|
        %tr{class: 'section-ordered', data: {id: post.id, type: post.class.to_s, order: post.section_order}}
          %td.padding-5{class: cycle('even', 'odd')}
            = link_to post.subject, post_path(post)
            .float-right
              = image_tag "/images/arrow_up.png", class: "section-up disabled-arrow"
              = image_tag "/images/arrow_down.png", class: "section-down disabled-arrow"
