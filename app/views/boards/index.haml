%table
  %thead
    %tr
      %th{colspan: 3}
        Continuities
        - if logged_in?
          = link_to new_board_path do
            .link-box.green + New Continuity
    %tr
      %th.sub Name
      %th.sub Authors
      %th.sub Last Updated
  %tbody
    - if @boards
      - @boards.each do |board|
        = render partial: 'list_item', locals: {board: board}
      - if @boards.empty?
        %tr
          %td.centered.padding-10.no-posts{ class: cycle('even','odd'), colspan: 3 } — No boards yet —
    - elsif @owned_boards
      %tr
        - @owned_boards.each do |board|
          = render partial: 'list_item', locals: {board: board}
        - if @owned_boards.empty?
          %tr
            %td.centered.padding-10.no-posts{ class: cycle('even','odd'), colspan: 3 } — No boards yet —
        - if @cameod_boards.present?
          %tr
            %td.continuity-spacer
          %th.sub{colspan: 3} Cameo Boards
          - @cameod_boards.each do |board|
            = render partial: 'list_item', locals: {board: board}
