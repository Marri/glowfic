%table
  %tr
    %th{colspan: 3}
      Continuities
      - if logged_in?
        = link_to new_board_path do
          .link-box.green + New Continuity
  %tr
    %th.sub Name
    %th.sub Authors
    %th.sub Last Updated
  - Board.all.each do |board|
    %tr
      - klass = cycle('even','odd')
      %td.padding-10{class: klass}= link_to board.name, board_path(board)
      %td.padding-10{class: klass}
        - if board.coauthor_id
          = board.writers.map { |u| link_to u.username, user_path(u) }.join(', ').html_safe
        - else
          Anyone
      %td.padding-10{class: klass}= pretty_time(board.posts.limit(1).order('updated_at desc').first.try(:updated_at))
