- if @user.avatar
  .user-avatar
    = link_to icon_path(@user.avatar) do
      = icon_tag @user.avatar
%b.username= @user.username
= surround '(', ')' do
  = link_to "Send Message", new_message_path(recipient_id: @user.id)
%br
- if @user.moiety
  %b Moiety:
  = color_block(@user)
  - if @user.moiety_name.present?
    %span{style: 'font-weight: bold; color:#' + @user.moiety}= @user.moiety_name
  %br
= link_to "#{@user.username}'s characters", user_characters_path(@user), class: 'user-characters'
%br
= link_to "#{@user.username}'s templates", user_templates_path(@user), class: 'user-templates'
%br
= link_to "#{@user.username}'s galleries", user_galleries_path(@user), class: 'user-galleries'
%br
= link_to "#{@user.username}'s posts", search_posts_path(author_id: @user.id, commit: 'Search'), class: 'user-posts'
%br
= link_to "#{@user.username}'s completed posts", search_posts_path(author_id: @user.id, commit: 'Search', completed: true), class: 'user-completed-posts'
%br
%br
- content_for :posts_title do
  #{@user.username}'s Recent Posts
= render partial: 'posts/list', locals: {posts: @posts, path: :user_path}
