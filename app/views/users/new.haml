= form_for @user, :url => users_path, :method => :post do |f|
  %table#signup.centered
    %tr
      %th.centered
        Sign Up
    %tr
      %td
        = f.text_field :username, :placeholder => "Username", :class => 'text'
    %tr
      %td
        = f.password_field :password, :placeholder => "Password", :class => 'text'
    %tr
      %td
        = f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => 'text'
    %tr
      %td
        = text_field_tag :secret, params[:secret], :placeholder => "Secret", :class => 'text'
    %tr
      %td.centered
        = submit_tag "Sign up"