%table
  %tr
    %th{colspan: 4} Facecasts
  %tr
    %th.sub= link_to 'Facecast', url_for(sort: nil)
    %th.sub Type
    %th.sub= link_to 'Name', url_for(sort: 'name')
    %th.sub= link_to 'Writer', url_for(sort: 'writer')
  - @pbs.each do |obj|
    - item_id = obj[:item_id]
    - item_name = obj[:item_name]
    - type = obj[:type]
    - pb = obj[:pb]
    - user_id = obj[:user_id]
    - username = obj[:username]
    %tr
      - klass = cycle('even', 'odd')
      %td.padding-5{class: klass}= pb
      %td.padding-5{class: klass}= type
      %td.padding-5{class: klass}
        - if type == Character
          = link_to item_name, character_path(item_id)
        - else
          = link_to item_name, template_path(item_id)
      %td.padding-5{class: klass}= link_to username, user_path(user_id)
