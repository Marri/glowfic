%table
  %tr
    %th{colspan: 4} Facecasts
  %tr
    %th.sub= link_to 'Facecast', url_for(sort: nil)
    %th.sub Type
    %th.sub= link_to 'Name', url_for(sort: 'name')
    %th.sub= link_to 'Writer', url_for(sort: 'writer')
  - @pbs.each do |obj|
    - item = obj[:item]
    - pb = obj[:pb]
    - user = obj[:user]
    %tr
      - klass = cycle('even', 'odd')
      %td.padding-5{class: klass}= pb
      %td.padding-5{class: klass}= item.class
      %td.padding-5{class: klass}
        - if item.is_a? Character
          = link_to item.name, character_path(item)
        - else
          = link_to item.name, template_path(item)
      %td.padding-5{class: klass}= link_to user.username, user_path(user)
