#header
  - if logged_in?
    #user-info
      = link_to user_path(current_user) do
        - if current_user.avatar
          = image_tag current_user.avatar.url, class: 'icon', id: 'user-icon'
        - else
          .no-img
        #user-username= current_user.username
  #logo
    = link_to root_path do
      = image_tag "layouts/logo.png", alt: 'Glowfic Constellation'
  #nav-top
    - if logged_in?
      %ul
        %li= link_to 'Account', edit_user_path(current_user)
        %li= link_to 'Inbox', messages_path
        %li= link_to "Characters", user_characters_path(current_user)
        %li= link_to "Galleries", user_galleries_path(current_user)
        %li= link_to 'Favorites', favorites_path
        %li= link_to "Post", new_post_path
      = link_to logout_path, method: :delete, id: :"header-logout" do
        = button_tag "Log out", class: 'button'
    - else
      = form_tag login_path, method: :post, id: 'header-form' do
        #header-forms
          = text_field_tag :username, params[:username], placeholder: "Username"
          = password_field_tag :password, params[:password], placeholder: "Password"
        #header-remember
          = check_box_tag :remember_me
          = label_tag :remember_me, "Remember Me"
        #header-buttons
          = submit_tag "Log in", class: 'button'
        #header-buttons-links
          = link_to "Sign up", new_user_path
          &nbsp;|&nbsp;
          = link_to "Forgot Password?", new_password_reset_path
  %nav.navbar.navbar-expand.navbar-dark
    #navbarNavDropdown
      %ul.navbar-nav
        %li.nav-item= link_to 'Continuities', boards_path, class: 'nav-link'
        %li.nav-item= link_to 'Recently Updated', posts_path, class: 'nav-link'
        %li.nav-item.dropdown
          = link_to 'Search', '#', class: 'nav-link dropdown-toggle', id: 'searchMenuLink', data: {toggle: 'dropdown'}, aria: {haspopup: 'true', expanded: 'false'}
          .dropdown-menu{aria: {labelledby: 'searchMenuLink'}}
            = link_to 'Posts', search_posts_path, class: 'dropdown-item'
            = link_to 'Replies', search_replies_path, class: 'dropdown-item'
            = link_to 'Characters', search_characters_path, class: 'dropdown-item'
            = link_to 'Templates', search_templates_path, class: 'dropdown-item'
            = link_to 'Galleries', search_galleries_path, class: 'dropdown-item'
            = link_to 'Users', search_users_path, class: 'dropdown-item'
        %li.nav-item= link_to 'Users', users_path, class: 'nav-link'
        %li.nav-item= link_to 'Facecasts', facecasts_characters_path, class: 'nav-link'
        - if logged_in?
          %li.nav-item= link_to 'Unread', unread_posts_path, class: 'nav-link'
          %li.nav-item= link_to 'Replies Owed', owed_posts_path, class: 'nav-link'
        %li.nav-item= link_to 'Contribute', contribute_path, class: 'nav-link'
        %li.nav-item.dropdown
          = link_to 'Tags', '#', class: 'nav-link dropdown-toggle', id: 'tagMenuLink', data: {toggle: 'dropdown'}, aria: {haspopup: 'true', expanded: 'false'}
          .dropdown-menu{aria: {labelledby: 'tagMenuLink'}}
            = link_to 'Settings', tags_path(view: 'Setting'), class: 'dropdown-item'
            = link_to 'Content Warnings', tags_path(view: 'ContentWarning'), class: 'dropdown-item'
            = link_to 'Labels', tags_path(view: 'Label'), class: 'dropdown-item'
        - if (day = DailyReport.unread_date_for(current_user)).present?
          %li.nav-item
            = link_to report_path(id: :daily, day: day), style: 'text-shadow: 0 0 0.8em #F87, 0 0 0.8em #F87', class: 'nav-link' do
              Daily Report
              %em= '(' + Date.parse(day).strftime("%b %d, %Y") + ')'
        - else
          %li.nav-item= link_to 'Daily Report', report_path(id: :daily), class: 'nav-link'
