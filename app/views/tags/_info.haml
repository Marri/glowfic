%table.tag-right-content-box
  %thead
    %tr
      %th.table-title{colspan: 2} Info
  %tbody
    - if @tag.is_a?(Setting) && @tag.parents.present?
      %tr
        %th.sub.centered.width-150= 'Parent Setting'.pluralize(@tag.parents.count)
        - setting_links = @tag.parents.map { |c| link_to(c.name, tag_path(c))}
        %td{class: cycle('even', 'odd')}= safe_join(setting_links, ', ')
    - if @tag.is_a?(Setting)
      %tr
        %th.sub.centered.width-150 Owner
        - if @tag.owners.exists?
          = safe_join(tag.owners.map { |user| user_link(user) }, ', ')
        - else
          %td{class: cycle('even', 'odd'), title: ('This setting is not marked as owned')}
    - if @tag.description.present?
      %tr
        %th.sub.centered.width-150.vtop Description
        %td.written-content{class: cycle('even', 'odd')}= sanitize_written_content(@tag.description)
